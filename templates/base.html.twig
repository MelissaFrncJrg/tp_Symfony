<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'title.welcome'|trans }}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>

        <nav style="background: #eee; padding: 1rem;">
            <ul style="list-style: none; display: flex; gap: 1rem; margin: 0; padding: 0;">
                <li><a href="{{ path('app_home') }}">{{ 'nav.home'|trans }}</a></li>
                <li><a href="{{ path('app_recipe_index') }}">{{ 'nav.recipes'|trans }}</a></li>
                {% if app.user %}
                    <li><a href="{{ path('app_recipe_new') }}">{{ 'nav.add_recipe'|trans }}</a></li>
                    <li><a href="{{ path('app_logout') }}">{{ 'nav.logout'|trans }}</a></li>
                {% else %}
                    <li><a href="{{ path('app_login') }}">{{ 'nav.login'|trans }}</a></li>
                    <li><a href="{{ path('app_register') }}">{{ 'nav.register'|trans }}</a></li>
                {% endif %}
            </ul>
        </nav>

        <main class="container">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
