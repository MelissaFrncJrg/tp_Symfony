{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur mon livre de recettes</h1>

    <h2>Les dernières recettes ajoutées:</h2>
    <ul>
        {% for recipe in recipes %}
            <li>
                <strong>{{ recipe.title }}</strong><br>
                <em>{{ recipe.origin.name|default('') }}</em>
                {{ recipe.description|u.truncate(80, '...') }}
            </li>
        {% else %}
            <li>Aucune recette n'a été ajoutée pour le moment</li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_recipe_index') }}">Parcourir les recettes</a>
</div>
{% endblock %}
