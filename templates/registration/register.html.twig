{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container">
        <h1>{{ 'register.heading'|trans }}</h1>

        {% for flash_error in app.flashes('verify_email_error') %}
            <span class="alert alert-danger" role="alert">{{ flash_error }}</span>
        {% endfor %}
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}

    <div class="form-section">
        {{ form_label(registrationForm.email, 'register.email'|trans) }}
        {{ form_widget(registrationForm.email) }}
    </div>

    <div class="form-section">
        {{ form_label(registrationForm.username, 'register.username'|trans) }}
        {{ form_widget(registrationForm.username) }}
    </div>

    <div class="form-section">
        {{ form_label(registrationForm.plainPassword, 'register.password'|trans) }}
        {{ form_widget(registrationForm.plainPassword) }}
    </div>

    {% for field in [registrationForm.email, registrationForm.username, registrationForm.plainPassword] %}
        {% if field.vars.errors|length > 0 %}
            <div class="alert alert-danger">
                {{ form_errors(field) }}
            </div>
        {% endif %}
    {% endfor %}

    <div class="form-footer">
        <button type="submit" class="btn btn-primary">{{ 'register.submit'|trans }}</button>
    </div>

    {{ form_end(registrationForm) }}

    </div>
{% endblock %}
